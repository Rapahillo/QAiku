<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QAiku.ChangePasswordPage"
             BackgroundColor="#202020">

    <StackLayout Padding="25">
        <Label TextColor="Orange" Text="Current Password" WidthRequest="100" Margin="15, 0, 0, -25" FontSize="20"/>

        <Editor x:Name="CurrentPassword" Text="Password" Margin="13, 20, 10, -25" TextColor="White" MaxLength="140" />

        <Label TextColor="Orange" Text="New Password" WidthRequest="100" Margin="15, 50, 0, -25" FontSize="20"/>

        <Editor x:Name="NewPassword" Text="Password" Margin="13, 20, 10, -25" TextColor="White" MaxLength="140" />

        <Label TextColor="Orange" Text="Re-Enter New Password" WidthRequest="100" Margin="15, 50, 0, -25" FontSize="20"/>

        <Editor x:Name="ReEnterNewPassword" Text="Password" Margin="13, 0, 10, -25" TextColor="White" MaxLength="140" />

        <Button x:Name="SaveChangesButton" TextColor="White" Text="Save Changes" BackgroundColor="Red" WidthRequest="270" Margin="0, 60, 0, -25" FontSize="16" HorizontalOptions="Center" Clicked="SaveChangesButton_Clicked"/>
    </StackLayout>
 

</ContentPage>