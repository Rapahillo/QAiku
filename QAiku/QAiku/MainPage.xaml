<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QAiku"
             x:Class="QAiku.MainPage"
             BackgroundColor="#202020">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings"
                     Icon="settings_icon.png"
                     Priority="0"
                     Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Padding="20">
            <Label Text="QAiku" FontSize="50" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Button x:Name="SendMessageButton" Text="Send" Clicked="SendMessageButton_Clicked" />

        </StackLayout>
    </Grid>
</ContentPage>
