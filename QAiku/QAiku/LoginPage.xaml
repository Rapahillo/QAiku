<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="QAiku.LoginPage"
             BackgroundColor="#ebd9c8">
    
    <ContentPage.Content>
        <StackLayout
            Spacing="20"
            Padding="20"
            VerticalOptions="Center" >

            <Label FontAttributes="Bold" FontSize="30" TextColor="#003f5a" Text="Welcome to"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
            <Image Source="qaikulogo.png" />

            <Entry x:Name="UsernameLoginEntry" Placeholder="Username" TextColor="#0c0000" PlaceholderColor="#0c0000" BindingContext="{Binding User}"/>
            <Entry x:Name="UserPasswordEntry" Placeholder="Password" IsPassword="True" TextColor="#0c0000" PlaceholderColor="#0c0000"/>
            <Button x:Name="LoginButton" Text="Login" TextColor="White" BackgroundColor="#007a7a" Clicked="LoginButton_Clicked"/>
            <Button x:Name="RegisterNewUserButton" BackgroundColor="Transparent" FontSize="12" TextColor="#0c0000" Text="Not a member? Sign up now" VerticalOptions="Center"
            HorizontalOptions="Center" Clicked="RegisterNewUserButton_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>