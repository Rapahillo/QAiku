<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QAiku.LoginPage"
             BackgroundColor="#202020">
    <ContentPage.Content>
        <StackLayout
            Spacing="20"
            Padding="20"
            VerticalOptions="Center">
            <Image Source="loginLogo.png" />
            <Label FontAttributes="Bold" FontSize="30" TextColor="White" Text="Welcome to QAiku"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
            <Entry Placeholder="User Name" TextColor="White" PlaceholderColor="White" />
            <Entry Placeholder="Password" IsPassword="True" TextColor="White" PlaceholderColor="White"/>
            <Button x:Name="LoginButton" Text="Login" TextColor="White" BackgroundColor="#8c011d" Clicked="LoginButton_Clicked"/>
            <Label FontSize="15" TextColor="White" Text="Not a member? Sign up now" VerticalOptions="Center"
            HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>