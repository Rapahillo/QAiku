<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QAiku.GiveFeedbackPage"
              BackgroundColor="#e9edda">
    
        <StackLayout Padding="25">

        <Label FontAttributes="Bold" FontSize="30" TextColor="#003f5a"  Text="Give Us Feedback"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

        <Editor x:Name="FeedbackField" Text="Feedback..." Margin="13, 60, 10, -25" TextColor="#0c0000" />

        <Entry Placeholder="Name" Margin="13, 60, 10, -25" TextColor="#0c0000" PlaceholderColor="#0c0000"/>
        <Entry Placeholder="Email" Keyboard="Email" Margin="13, 40, 10, -25" TextColor="#0c0000" PlaceholderColor="#0c0000"/>
        <Entry Placeholder="Phone Number" Margin="13, 40, 10, -25" TextColor="#0c0000" PlaceholderColor="#0c0000"/>

        <Button x:Name="SendFeedbackButton" TextColor="White" Text="Send" BackgroundColor="#007a7a" WidthRequest="180" Margin="25, 80, 20, -25" FontSize="16" HorizontalOptions="Center" Clicked="SendFeedbackButton_Clicked"/>

    </StackLayout>
    
</ContentPage>