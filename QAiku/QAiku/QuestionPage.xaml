<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="QAiku.QuestionPage"
             BackgroundColor="#202020">
    
    <ContentPage.Content>
        <StackLayout
            Spacing="20"
            Padding="20">
            <!--VerticalOptions="Center" >-->
            <!--<Button x:Name="Back" Text="Back" HorizontalOptions="Start"/>-->
            
            <Editor x:Name="Question" Text="Question" TextColor="White" MaxLength="140" BindingContext="{Binding Msg}" />
            <Editor x:Name="Description" Text="Description" TextColor="White" BindingContext="{Binding Msg}" />
            
            <Entry x:Name="ChooseRecipient" Placeholder="Recipient" TextColor="White" PlaceholderColor="White" BindingContext="{Binding Msg}"/>
            <Button x:Name="SendQuestionButton" Text="Send" TextColor="White" BackgroundColor="#8c011d" Clicked="SendQuestionButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>