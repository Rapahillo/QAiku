<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QAiku.QuestionThreadPage"
              BackgroundColor="#ebd9c8">

    <StackLayout Padding="25">

        <Label TextColor="#003f5a" Text="Sender" WidthRequest="100" Margin="15, 0, 0, -25" FontSize="20"/>
        <Label BindingContext="{Binding Question}" Text="{Binding SenderId}" TextColor="#0c0000" WidthRequest="100" Margin="15" FontSize="16"/>

        <Label TextColor="#003f5a" Text="Question" WidthRequest="100" Margin="15, 5, 0, -25" FontSize="20"/>
        <Label  BindingContext="{Binding Question}"  Text="{Binding Subject}" TextColor="#0c0000" WidthRequest="100" Margin="15" FontSize="16"/>


        <Label TextColor="#003f5a" Text="Description" WidthRequest="100" Margin="15, 5, 0, -25" FontSize="20" />
        <Label TextColor="#0c0000" WidthRequest="100" Margin="15, -7" FontSize="16" BindingContext="{Binding Question}"  Text="{Binding Description}"/>



        <ListView x:Name="QuestionList" RowHeight="100" ItemsSource="{x:Binding}" BindingContext="{Binding AnswerList}" ItemTemplate="{StaticResource messageview}"/>


        <Button x:Name="NewQuestionButton" Text="New question" Margin="0, 0, -10, -5" HorizontalOptions="End" BackgroundColor="#007a7a" />
        
    </StackLayout>
    
    
</ContentPage>