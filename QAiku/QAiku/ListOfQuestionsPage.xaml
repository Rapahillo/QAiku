<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:qaiku="clr-namespace:QAiku"
             x:Class="QAiku.ListOfQuestionsPage"
             BackgroundColor="#202020">

    <StackLayout>

        <Image Source="loginLogo.png" />
        <Button x:Name="SettingsButton" Text="Settings" Margin="10, 10, 10, 0" HorizontalOptions="End" BackgroundColor="BlueViolet" />
        <Button x:Name="BackButton" Text="Back" Margin="15, -55, 25, 8" HorizontalOptions="Start" BackgroundColor="Blue"/>


        <StackLayout>

            <Entry Grid.Column="1" Placeholder="Search..." Margin="15, 0"/>
            
         
        </StackLayout>

        <ListView x:Name="QuestionList" RowHeight="120" ItemsSource="{x:Binding}" BindingContext="{Binding Messages}" >
            <!--ItemTemplate="{StaticResource messageview}"-->  

            <ListView.ItemTemplate>
                <DataTemplate>                
                    <ViewCell>
                    <StackLayout Padding="25">
                        <Label x:Name="SubjectLabel" TextColor="Orange" Text="{Binding Subject}" WidthRequest="100" Margin="15, 0, 0, -25" FontSize="20"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="55"/>
                                <!--<RowDefinition Height="55"/>
                                <RowDefinition Height="55"/>-->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>
                                <Label x:Name="SendDateLabel" TextColor="White" Text="{Binding SendDate}" WidthRequest="50" Margin="15, -10, 0, 50" FontSize="10" Grid.Row="0" Grid.Column="0"/>
                            <Label x:Name="SenderIdLabel" TextColor="White" Text="{Binding SenderId}" WidthRequest="50" Margin="15, -20, 0, 50" FontSize="14" Grid.Row="0" Grid.Column="1"/>
                        </Grid>
                            <Button x:Name="ViewThreadButton" Text="View" FontSize="10" Margin="15, -40, 0, 50" Clicked="ViewThreadButton_Clicked" CommandParameter="{Binding}" BindingContext="{Binding}"/>

                    </StackLayout>
                </ViewCell>
                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>

        <Button x:Name="NewMessageButton" Text="New message" Margin="0, 0, 10, 10" HorizontalOptions="End" BackgroundColor="Red" Clicked="NewMessageButton_Clicked" />

    </StackLayout>
    
</ContentPage>